<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



        <ListView
            android:layout_width="140dp"
            android:layout_height="186dp"
            android:id="@+id/list_newBT_Devices"

            android:visibility="visible"
            android:layout_alignBottom="@+id/list_Paired_BT_devices"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="40dp" />

        <ListView
            android:layout_width="126dp"
            android:layout_height="193dp"
            android:id="@+id/list_Paired_BT_devices"
            android:visibility="visible"
            android:layout_gravity="center_horizontal"
            tools:listitem="@android:layout/simple_list_item_1"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="29dp"
            android:layout_marginTop="45dp" />
        <Button
            android:layout_width="64dp"
            android:text="@string/list"
            android:id="@+id/button_paired"
            android:layout_height="50dp"
            android:layout_below="@+id/list_newBT_Devices"
            android:layout_alignParentStart="true"
            android:layout_marginTop="82dp" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_height="50dp"
            android:text="@string/scan"
            android:id="@+id/button_scan"
            android:layout_width="65dp"
            android:layout_alignBaseline="@+id/button_paired"
            android:layout_alignBottom="@+id/button_paired"
            android:layout_alignParentEnd="true" />


</RelativeLayout>
